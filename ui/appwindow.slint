import { Button } from "std-widgets.slint";
component Button {
    in-out property <string> text;
    in property <color> bg-color;
    in property <bool> dark: false;
    Rectangle {
        Text {
            text: text;
            font-size: 20px;
            color: bg-color.darker(dark ? -99% : 99%);
        }

        drop-shadow-color: self.background.darker(dark ? -10% : 10%);
        background: ta.pressed ? bg-color.darker(dark ? -15% : 15%) : ta.has-hover ? bg-color.darker(dark ? -40% : 40%) : bg-color.darker(dark ? -20% : 0%);
        animate background, border_radius { duration: 150ms; }
        border-radius: ta.pressed ? 8px : 20px;
        border-width: ta.pressed ? 3px : 1px;
        animate border-width {
            duration: 2000ms;
            easing: ease-out-elastic;
        }
        border-color: ta.pressed ? self.background.darker(dark ? -40% : 40%) : self.background.darker(dark ? -22% : 22%);
        ta := TouchArea { }
    }
}

